@model IEnumerable<Rocky.Models.Category>
    <!--IEnumerable เป็นหมวดหมู่ที่นับได้ หรือ List / เป็นการบอกเส้นทางของข้อมูล <Rocky.Models.Category> -->

@{ ViewData["Title"] = "Index"; }

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories Data</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create"  class="btn btn-primary" >
                <i class="fas fa-plus"></i> &nbsp; Add Categories
            </a>
        </div>
    </div>

    <br /><br />
    <table class="table-bordered table-striped text-center" style="width:100%">
        <thead>
            <tr>
                <th>
                    <div>
                        Categories Product
                    </div>
                </th>
                <th>
                    <div>
                        Number Categories
                    </div>
                </th>
                <th>
                    Edit or Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@Html.DisplayFor(ModelItem => item.CategoryName)</td>
                    <td width="30%">@Html.DisplayFor(ModelItem => item.DisplayOrder)</td>
                    <td>
                        <div class="btn btn-group w-100">
                            <a asp-controller="Category" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary mx-1">
                                <i class="far fa-edit"></i> &nbsp; Edit
                            </a>
                            <a asp-controller="Category" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                <i class="far fa-trash-alt"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>